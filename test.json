{
  "variables": {
    "img_mount_path": "/mnt/pimbatest",
    "sha256_checksum": ""
  },
  "builders": [{
    "type": "arm-image",
    "iso_url" : "pimba.img",
    "iso_checksum" : "{{ user `sha256_checksum` }}",
    "image_type": "raspberrypi",
    "target_image_size" : 5368709120,
    "output_filename" : "/tmp/testimage",
    "mount_path": "{{ user `img_mount_path` }}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "mkdir -p /tmp/serverspec" ]
    },
    {
      "type": "file",
      "source": "Rakefile",
      "destination": "/tmp/serverspec/Rakefile"
    },
    {
      "type": "file",
      "source": ".rspec",
      "destination": "/tmp/serverspec/.rspec"
    },
    {
      "type": "file",
      "source": "spec",
      "destination": "/tmp/serverspec/"
    },
    {
      "type": "shell",
      "environment_vars": [
        "LANG=C",
        "LC_ALL=C"
      ],
      "inline": [
        "apt-get update",
        "apt-get install -y ruby",
        "gem install net-ssh -N -v 6.1.0",
        "gem install rspec-its -N -v 1.3.1",
        "gem install serverspec -N -v 2.41.8",
        "cd /tmp/serverspec && rake spec"
      ]
    }
  ],
  "post-processors": [{
    "type": "shell-local",
    "inline": [
      "rm /tmp/testimage"
    ]
  }]
}
