{
  "variables": {
    "img_mount_path": "/mnt/raspios"
  },
  "builders": [{
    "type": "arm-image",
    "iso_url" : "2024-11-19-raspios-bookworm-armhf-lite.img.xz",
    "iso_checksum" : "1dacc70cc09162c995020ac1739ee60e6843cf2bfb393654e694e3f017d781bb",
    "target_image_size" : 5368709120,
    "output_filename" : "/tmp/image",
    "mount_path": "{{ user `img_mount_path` }}"
  }],
  "provisioners": [{
    "type": "shell-local",
    "environment_vars": [
      "LANG=C.UTF-8",
      "LC_ALL=C.UTF-8"
    ],
    "inline": [
      "sudo -E ANSIBLE_FORCE_COLOR=1 PYTHONUNBUFFERED=1 ansible-playbook -i '{{ user `img_mount_path` }}', -v -c chroot playbook.yaml"
    ]
  }],
  "post-processors": [{
    "type": "shell-local",
    "inline": [
      "mv /tmp/image pimba.img"
    ]
  }]
}
