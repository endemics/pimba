{
  "variables": {
    "img_mount_path": "/mnt/raspbian"
  },
  "builders": [{
    "type": "arm-image",
    "iso_url" : "2019-04-08-raspbian-stretch-lite.zip",
    "iso_checksum_type" : "sha256",
    "iso_checksum" : "03ec326d45c6eb6cef848cf9a1d6c7315a9410b49a276a6b28e67a40b11fdfcf",
    "target_image_size" : 5368709120,
    "output_filename" : "/tmp/image",
    "mount_path": "{{ user `img_mount_path` }}"
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "environment_vars": [
        "LANG=C",
        "LC_ALL=C"
      ],
      "inline": [
        "sudo -E ANSIBLE_FORCE_COLOR=1 PYTHONUNBUFFERED=1 ansible-playbook -i '{{ user `img_mount_path` }}', -v -c chroot playbook.yaml"
      ]
    },
    {
      "type": "shell",
      "inline": [ "mkdir -p /tmp/serverspec" ]
    },
    {
      "type": "file",
      "source": "Rakefile",
      "destination": "/tmp/serverspec/Rakefile"
    },
    {
      "type": "file",
      "source": ".rspec",
      "destination": "/tmp/serverspec/.rspec"
    },
    {
      "type": "file",
      "source": "spec",
      "destination": "/tmp/serverspec/"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y ruby",
        "gem install serverspec --no-ri --no-rdoc",
        "cd /tmp/serverspec && rake spec"
      ]
    }
  ],
  "post-processors": [{
    "type": "shell-local",
    "inline": [
      "mv /tmp/image pimba.img"
    ]
  }]
}
